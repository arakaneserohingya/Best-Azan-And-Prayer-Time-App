<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alhadara.omar.azan.Activities.SettingsForthActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings_forth_activity"
        android:alpha="0.8"
        android:layout_gravity="top"
        android:theme="@style/ToolbarTheme"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <ScrollView
        android:id="@+id/settings_forth_activity_scrollview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_settings_forth_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>