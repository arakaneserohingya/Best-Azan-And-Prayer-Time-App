<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton
        android:id="@+id/settings_box_image"
        app:layout_constraintBottom_toTopOf="@id/settings_box_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        android:tint="@android:color/darker_gray"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/settings_box_header"
        app:layout_constraintStart_toEndOf="@id/settings_box_image"
        android:textColor="@android:color/black"
        android:textSize="@dimen/widget_font_size_small"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/settings_box_details"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/settings_box_image"
        app:layout_constraintTop_toBottomOf="@id/settings_box_header"
        app:layout_constraintBottom_toTopOf="@id/settings_box_border"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/settings_box_border"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/settings_box_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>