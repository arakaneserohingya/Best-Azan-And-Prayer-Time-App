<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/time_point"
    android:orientation="vertical"
    android:paddingTop="1.5dp"
    android:paddingBottom="1.5dp"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/widgetColorSettingsBox">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/time_point_time_container"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
            android:layout_gravity="center"
            android:id="@+id/time_point_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_font_size"

            android:layout_width="0dp"
            android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/time_point_time_container"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/time_point_ampm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/time_point_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="2dp"
            android:gravity="right|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_gravity="left"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>