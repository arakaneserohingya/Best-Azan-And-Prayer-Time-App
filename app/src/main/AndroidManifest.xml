<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omar.azanapkmostafa">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.alhadara.omar.azan.Activities.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alhadara.omar.azan.Activities.TimePointSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.alhadara.omar.azan.Activities.AdjustTimesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.alhadara.omar.azan.Activities.LocationsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.alhadara.omar.azan.Activities.InternetLocationSearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.alhadara.omar.azan.UpdateCurrentLocationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.alhadara.omar.azan.Activities.AdjustLocationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.alhadara.omar.azan.Activities.ManuallyLocationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.alhadara.omar.azan.Activities.ManuallyLocationCitiesActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--  Declare  Alarm Broadcast receiver here  -->
        <receiver android:name="com.alhadara.omar.azan.Alarms.GeneralSettingsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.alhadara.omar.azan.Alarms.TimePrayerReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <service android:name="com.alhadara.omar.azan.Alarms.TimePrayerService"
            android:enabled="true"
            android:exported="false"/>


    </application>

</manifest>